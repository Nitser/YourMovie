<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionBarStyle">@style/AppActionBarTheme</item>
        <item name="android:actionBarStyle">@style/AppActionBarTheme</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="AppActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimary</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/KithActionBarTitle</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="KithActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="DialogCalendar" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorDate</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="EntryDarkButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_empty_background_dark</item>
        <item name="android:textColor">@drawable/button_empty_text_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:elevation">5dp</item>
        <item name="android:translationZ">5dp</item>
    </style>

    <style name="EntryLightButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:stateListAnimator">@null</item>-->
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:background">@drawable/button_empty_background_light</item>
        <item name="android:textColor">@drawable/button_empty_text_light</item>
        <item name="android:elevation">5dp</item>
        <item name="android:translationZ">5dp</item>
    </style>

    <style name="EmptyButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@drawable/button_empty_text</item>
        <item name="android:elevation">5dp</item>
        <item name="android:translationZ">5dp</item>
    </style>

    <style name="FieldLight" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LightDescriptionText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TitleCardText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="LightText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DescriptionCardText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="DateText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorDate</item>
    </style>

    <style name="DescriptionText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

</resources>
